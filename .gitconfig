[ga]
	braganca = Gustavo Braganca
[user]
	name = Gustavo Braganca
	email = ga.braganca@gmail.com
[credential]
	helper = cache --timeout=3600
[color]
	ui = auto
[diff "odf"]
      textconv=odt2txt
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
	ls = log --oneline
	unstage = reset HEAD --
	last = log -1 HEAD
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    pu = !"git fetch origin -v; git fetch upstream -v; git merge upstream/master"
    diff-csv = diff --word-diff-regex="[^[:space:],]+":w
	up = pull --rebase --autostash
[core]
	editor = vim
[init]
	defaultBranch = main
